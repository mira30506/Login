    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="mx.com.edlosproyect.ui.facts.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navHome_to_info_fragment"
            app:destination="@id/info_fragment" />
    </fragment>


    <fragment
        android:id="@+id/info_fragment"
        android:name="mx.com.edlosproyect.ui.facts.home.InfoFragment"
        android:label="@string/Information_facts"
        tools:layout="@layout/fragment_facts_info" />
